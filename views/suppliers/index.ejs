<%- include('../partials/header') %>
<h1>Danh sách Nhà cung cấp</h1>
<a href="/suppliers/new">➕ Thêm nhà cung cấp</a>
<table border="1" cellpadding="6">
  <thead>
    <tr>
      <th>Tên</th><th>Địa chỉ</th><th>Số điện thoại</th><th>Hành động</th>
    </tr>
  </thead>
  <tbody>
    <% suppliers.forEach(s => { %>
      <tr>
        <td><a href="/suppliers/<%= s._id %>"><%= s.name %></a></td>
        <td><%= s.address %></td>
        <td><%= s.phone %></td>
        <td>
          <a href="/suppliers/<%= s._id %>/edit">✏️ Sửa</a>
          <form action="/suppliers/<%= s._id %>?_method=DELETE" method="POST" style="display:inline">
            <button type="submit" onclick="return confirm('Bạn có chắc muốn xóa?')">🗑️ Xóa</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>

