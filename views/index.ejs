<%- include('partials/header') %>

<h1>🏠 Trang chủ</h1>

<!-- Form tìm kiếm -->
<form method="GET" action="/products/search">
  <input type="text" name="q" placeholder="Tìm sản phẩm...">
  <button type="submit">🔍 Tìm</button>
</form>

<!-- Lọc sản phẩm theo nhà cung cấp -->
<h3>Lọc theo Nhà cung cấp:</h3>
<ul>
  <% suppliers.forEach(s => { %>
    <li><a href="/products/by-supplier/<%= s._id %>"><%= s.name %></a></li>
  <% }) %>
</ul>

<hr>

<h2>📦 Danh sách sản phẩm</h2>
<table border="1" cellpadding="6">
  <thead>
    <tr>
      <th>Tên</th>
      <th>Giá</th>
      <th>Số lượng</th>
      <th>Nhà cung cấp</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(p => { %>
      <tr>
        <td><a href="/products/<%= p._id %>"><%= p.name %></a></td>
        <td><%= p.price %></td>
        <td><%= p.quantity %></td>
        <td><%= p.supplier ? p.supplier.name : 'N/A' %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('partials/footer') %>
