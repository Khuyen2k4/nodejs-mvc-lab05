<%- include('../partials/header') %>

<h2>✏️ Sửa sản phẩm</h2>

<form action="/products/<%= product._id %>" method="POST">
  <label>Tên sản phẩm:</label><br>
  <input type="text" name="name" value="<%= product.name %>" required><br><br>

  <label>Giá:</label><br>
  <input type="number" name="price" value="<%= product.price %>" required><br><br>

  <label>Số lượng:</label><br>
  <input type="number" name="quantity" value="<%= product.quantity %>" required><br><br>

  <label>Nhà cung cấp:</label><br>
  <select name="supplier" required>
    <% suppliers.forEach(s => { %>
      <option value="<%= s._id %>" <%= product.supplier && product.supplier.equals(s._id) ? 'selected' : '' %>>
        <%= s.name %>
      </option>
    <% }) %>
  </select><br><br>

  <button type="submit">💾 Cập nhật</button>
</form>

<a href="/products">⬅️ Quay lại</a>

<%- include('../partials/footer') %>
